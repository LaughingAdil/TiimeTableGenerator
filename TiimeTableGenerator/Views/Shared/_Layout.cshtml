<!DOCTYPE html>
<html lang="en" >

<head >
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TiimeTableGenerator</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <!--link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /-->
    
    <script src = "~/js/html2pdf.bundle.min.js"></script>
   <script>
       window.onload = function () {
           document.getElementById("download")
               .addEventListener("click", () => {
                   const timetables = this.document.getElementById("downloadable");
                   var opt =
                   {
                       margin: 1,
                       filename: 'myfile.pdf',
                       image: { type: 'PNG', quality: 1},
                       html2canvas: { scale: 1 },
                       jsPDF: { unit: 'in', format: 'letter', orientation: 'portrait' }
                       }
                    console.log(timetables);
                   console.log(window);
                   html2pdf().from(timetables).save();
               })
       }
   </script>
    <style>
        body {
            margin: 0;
            padding: 0;
            min-height: 100vh; /* Ensure body takes up at least the full viewport height */
            background-image: url('/Images/classtwo.jpg');
            background-size: cover; /* Cover the entire background */
            background-repeat: no-repeat;
            background-position: center;
            background-attachment: fixed; /* Ensure the background image remains fixed */
        }
    </style>
    
</head>



<body class="body" >


    <header style="background-color:black ;opacity:80%;" class="header">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-black box-shadow mb-3 ">

            <div class="container-fluid" style="background-color:black ">
                <a class="nav-link text-light" style="margin-right:20px;">
                    TimeTable Generator 
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Privacy">About</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container ">
        <main role="main" class="pb-3 ">
            @RenderBody()
        </main>
    </div>

 
    <footer id="myFooter" class="footer text-centre text-muted text-light " style="opacity: 80% ;background-color:black;position:fixed; text-align:center;right:0;left:0;bottom:0;padding:10px;">
        <div class="container text-align-centre" >
            Go To Source Code <a href="https://github.com/LaughingAdil/TiimeTableGenerator.git" >GitHub</a>
        </div>
    </footer>
   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
